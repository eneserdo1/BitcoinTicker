<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:paddingVertical="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.coinDetail.CoinDetailFragment">

        <ImageView
            android:id="@+id/coin_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/coin_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/coin_imageview"
            app:layout_constraintStart_toEndOf="@id/coin_imageview"
            app:layout_constraintTop_toTopOf="@+id/coin_imageview"
            tools:text="Bitcoin" />


        <TextView
            android:id="@+id/coin_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coin_imageview"
            android:layout_marginTop="40dp"
            android:text="Description: " />

        <TextView
            android:id="@+id/coin_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textAlignment="textStart"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/coin_description"
            app:layout_constraintTop_toBottomOf="@id/coin_imageview"
            android:layout_marginTop="40dp"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/coin_hash_algorithm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coin_description_tv"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:text="Hash Algorithm: " />

        <TextView
            android:id="@+id/coin_hash_algorithm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textAlignment="textStart"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/coin_hash_algorithm"
            app:layout_constraintTop_toBottomOf="@id/coin_description_tv"
            android:layout_marginTop="30dp"
            tools:text="Bitcoin" />

        <TextView
            android:id="@+id/coin_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coin_hash_algorithm_tv"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:text="Current Price: " />

        <TextView
            android:id="@+id/coin_current_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textAlignment="textStart"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/coin_current_price"
            app:layout_constraintTop_toBottomOf="@id/coin_hash_algorithm_tv"
            android:layout_marginTop="30dp"
            tools:text="Bitcoin"
            />

        <TextView
            android:id="@+id/coin_change_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_semibold"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coin_current_price_tv"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:text="Change Percentage: " />

        <TextView
            android:id="@+id/coin_change_percentage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textAlignment="textStart"
            android:textColor="@color/textGrey"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/coin_change_percentage"
            app:layout_constraintTop_toBottomOf="@id/coin_current_price_tv"
            android:layout_marginTop="30dp"
            tools:text="Bitcoin"
            />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <LinearLayout
                android:id="@+id/add_favourite_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="invisible"
                >
                <EditText
                    android:id="@+id/coin_timer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:background="@drawable/serachview_background"
                    android:hint="Yenileme Zamanı giriniz"
                    android:layout_marginHorizontal="5dp"
                    android:paddingHorizontal="5dp"
                    android:inputType="number"
                    />

                <Button
                    android:id="@+id/add_fav_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_marginHorizontal="5dp"
                    android:text="Favoriye Ekle"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    />


            </LinearLayout>
            <Button
                android:id="@+id/delete_fav_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_marginHorizontal="5dp"
                android:text="Favorilerden Kaldır"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>